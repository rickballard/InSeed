{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AI Front Door Schema",
  "type": "object",
  "properties": {
    "name": {"type": "string"},
    "version": {"type": "string"},
    "routes": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "path": {"type": "string"},
          "method": {"type": "string"},
          "description": {"type": "string"}
        },
        "required": ["path","method"]
      }
    }
  },
  "required": ["name","version","routes"]
}